<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/weatherButton"
        android:layout_width="184dp"
        android:layout_height="155dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/weather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatRoomButton" />

    <ImageButton
        android:id="@+id/chatButton2"
        android:layout_width="259dp"
        android:layout_height="110dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/settingButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="336dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/ic_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/chatRoomButton"
        android:layout_width="184dp"
        android:layout_height="98dp"
        android:layout_marginBottom="252dp"
        android:src="@drawable/chatroom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/uwtLogo"
        android:layout_width="89dp"
        android:layout_height="153dp"
        android:layout_marginEnd="324dp"
        android:layout_marginTop="488dp"
        android:src="@drawable/uwtlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="185dp"
        android:layout_height="66dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Home"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="54sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/INSTECHLOGO"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/uwt_institute_of_tech"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/SimpleChatTEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Simple Chat"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/chatButton2"
        app:layout_constraintTop_toBottomOf="@+id/settingButton2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Chat Rooms"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/chatRoomButton"
        app:layout_constraintTop_toBottomOf="@+id/SimpleChatTEXT" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Weather"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/weatherButton"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</android.support.constraint.ConstraintLayout>