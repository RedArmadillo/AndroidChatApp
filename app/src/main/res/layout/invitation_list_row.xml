<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invitationRowLayout"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/invitationRoomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/invitationSenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/invitationRoomName"
        android:text="TextView" />

    <Button
        android:id="@+id/invitationNoButton"
        android:layout_width="62dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/invitationJoinButton"
        android:text="No"
        android:visibility="visible" />

    <Button
        android:id="@+id/invitationJoinButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="62dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Join"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/invitationProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invitationSenderName"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />
</RelativeLayout>