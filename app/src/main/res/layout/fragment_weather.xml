<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.WeatherFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/btnWeatherMap"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@android:color/transparent"
        android:clickable="true"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_dialog_map"
        android:tint="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/btnWeatherLoc"
        app:layout_constraintTop_toBottomOf="@+id/tvWeatherTitle" />

    <ImageButton
        android:id="@+id/btnWeatherLoc"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@android:color/transparent"
        android:clickable="true"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_mylocation"
        android:tint="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/chatSendButton2"
        app:layout_constraintTop_toBottomOf="@+id/tvWeatherTitle" />

    <ImageButton
        android:id="@+id/chatSendButton2"
        android:layout_width="29dp"
        android:layout_height="39dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@android:color/transparent"
        android:clickable="true"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_send_button"
        android:tint="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/etWeatherZip"
        app:layout_constraintTop_toBottomOf="@+id/tvWeatherTitle" />

    <EditText
        android:id="@+id/etWeatherZip"
        android:layout_width="162dp"
        android:layout_height="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter a Zip Code"
        android:inputType="textPersonName|number"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWeatherTitle" />

    <TextView
        android:id="@+id/tvWeatherTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/weather_header"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="495dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="408dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etWeatherZip">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weather_current"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weather_hi_low" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weather_conditions" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <View
                android:id="@+id/divider2"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider"
                android:visibility="visible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weather_24_hour"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weather_hi_low" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weather_conditions" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weather_5_day"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>