<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="1dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/receivedMessageSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/receivedAvatar"
        android:text="aaa" />

    <TextView
        android:id="@+id/receivedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receivedMessageSender"
        android:layout_marginRight="38dp"
        android:background="@drawable/received_message_background"
        android:paddingHorizontal="15dp"
        android:paddingVertical="4dp"
        android:layout_toEndOf="@id/receivedAvatar"
        android:text="aaa"
        android:textColor="@android:color/white"
        android:textSize="10pt" />

    <ImageView
        android:id="@+id/receivedAvatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/armadillo" />
</RelativeLayout>